  <p>コメント件数：<%= post_image.post_comments.count %></p>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>ユーザー名</th>
        <th>日付</th>
        <th>コメント</th>
    </thead>
    <tbody>
  <% post_image.post_comments.each do |post_comment| %>
  <tr>
    <td><%= image_tag post_comment.user.get_profile_image(100,100) %> <%= post_comment.user.name %></td>
    <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
    <td><%= post_comment.comment %></td>
    <% if post_comment.user == current_user %>
      <td><%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} %></td>
    <% end %>
  <tr>
  <% end %>
  </tbody>
